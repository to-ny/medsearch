{
  "ci": {
    "collect": {
      "startServerCommand": "bun start",
      "startServerReadyPattern": "Ready in",
      "startServerReadyTimeout": 120000,
      "url": ["http://localhost:3000/", "http://localhost:3000/companies", "http://localhost:3000/compare"]
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.8 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.8 }],
        "categories:seo": ["warn", { "minScore": 0.8 }],
        "bf-cache": "off",
        "forced-reflow-insight": "off",
        "legacy-javascript-insight": "off",
        "network-dependency-tree-insight": "off",
        "unused-javascript": ["warn", { "maxLength": 2 }],
        "legacy-javascript": ["warn", { "maxLength": 2 }],
        "render-blocking-resources": ["warn", { "maxLength": 2 }],
        "render-blocking-insight": ["warn", { "maxLength": 2 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
